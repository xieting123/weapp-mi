/**app.wxss**/
@import "/wxParse/wxParse.wxss";
@import 'weui/weui.wxss';
@import 'article/article.wxss';

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* text文本自动折行 */

.title {
  width: 100%;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  /* margin: 2.5rpx 0.5rpx 2.5rpx 0.5rpx; */
}

/* 评论及回复中的富文本 */

.dynamic-comments-content-see-imgs-box {
  display: flex;
  align-items: center;
  color: #456693;
}

.dynamic-comments-content-see-imgs {
  width: 34rpx;
  height: 26rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

/* 评论及回复中的富文本 */

/* 富文本格式 */

.emojio-imgs-richtext {
  width: 30rpx !important;
  height: 30rpx !important;
  vertical-align: middle;
}

rich-text .exec-https-img {
  display: flex;
  /* flex-wrap: wrap; */
}

rich-text .exec-https-img img {
  width: 28rpx !important;
  height: 28rpx !important;
  vertical-align: middle;
}

rich-text .exec-https-img span {
  display: inline-block;
}

/* 富文本格式 */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background: #f1f2f6;
}

/* 用户头像 */

.user-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

/* 用户认证 */

.user-identify {
  width: 30rpx;
  height: 30rpx;
}

/* 出现省略号 */

.content {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 模态框样式 */

.modal-container {
  position: fixed;
  width: 100%;
  background: #fff;
  bottom: 0rpx;
  box-shadow: 0px -1px 10px rgba(0, 0, 0, 0.16);
}

/* 模态框关闭按钮 */

.modal-close {
  width: 44rpx;
  height: 44rpx;
  float: right;
}

/* 红色按钮 */

.red-bottton {
  width: 686rpx;
  height: 88rpx;
  background: rgba(215, 0, 15, 1);
  opacity: 1;
  border-radius: 44px;
  color: #fff;
  line-height: 88rpx;
}

/* 添加一个类名, 把弹窗的下层内容定位为fixed.实现禁止滚动的效果 */

.indexFixed {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

/* 商圈头部 */

.quan-top {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.quan-top image {
  height: 218rpx;
  width: 218rpx;
  margin: 30rpx;
  border-radius: 50%;
}

.quan-name {
  font-size: 32rpx;
  color: #fff;
}

.quan-ID {
  font-size: 24rpx;
  color: #456693;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.quan-ID button {
  height: 20rpx;
  font-size: 14rpx;
  line-height: 20rpx;
  margin-left: 10rpx;
}

/* 实人认证 职务认证图标 */

.identify {
  width: 70rpx;
  height: 20rpx;
  margin-left: 8rpx;
}

/* 箭头 */

.jantou {
  width: 12rpx;
  height: 22rpx;
}

/* lable标签 */

.laber-laber {
  background: #5cc0e6;
  font-size: 18rpx;
  padding: 5rpx 10rpx;
  color: #fff;
  margin-left: 8rpx;
}

/* 选项卡样式共用 tab样式切换开始 */

.tab {
  text-align: center;
  padding: 10rpx 0;
  margin-right: 54rpx;
  display: inline-block;
}

/* 固定 */

.fix-news {
  position: fixed;
  top: 0;
  left: 0;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 2px solid #f00;
  color: #f00;
}

.tab {
font-size:30rpx;
font-family:PingFang SC;
font-weight:bold;
line-height:47rpx;
opacity:1;
}

.swiper {
  width: 100%;
}

.swiper_con {
  width: 100%;
  height: 100%;
  background: #fff;
}

.swiper_con2 {
  width: 100%;
  height: 100%;
  padding-bottom: 88rpx;
}

.scroll-view {
  width: 100%;
  white-space: nowrap;
  border-bottom: 1px solid #ccc;
  zoom: 1;
}

/* tab样式切换结束 */


