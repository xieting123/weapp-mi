/* pages/goingQuan/goingQuan.wxss */


.quan-list {
  position: absolute;
  top: 370rpx;
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-around;
}
.quan-list-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.quan-list-item text:nth-child(1) {
  color: #d7000f;
  font-weight: bold;
  font-size: 36rpx;
}

.quan-list-item text:nth-child(2) {
  color: #999;
  font-size: 22rpx;
}

.quan-intruduce {
  height: 217rpx;
}

.quan-title {
  color: #4d4d4d;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #eee;
}

.quan-content {
  color: #4d4d4d;
  font-size: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 商圈成员及商圈介绍描述 */

.quan-intruduce, .quan-member {
  width: 100%;
  background: #fff;
  margin-top: 16rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.member-container .member-list-item {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.member-info {
  display: flex;
  flex-direction: column;
}

.member-info text:nth-child(1) {
  font-size: 28rpx;
  color: #4d4d4d;
}

.member-info text:nth-child(2) {
  font-size: 22rpx;
  color: #999;
  margin-top: 12rpx;
}

.member-image {
  position: relative;
  margin-right: 16rpx;
}

.user-identify {
  position: absolute;
  top: 50rpx;
  left: 50rpx;
}

/* button按钮 */

.free-toquan {
  background: linear-gradient(90deg, rgba(255, 170, 128, 1) 0%, rgba(255, 76, 76, 1) 100%);
  color: #fff;
  font-size: 28rpx;
  width: 686rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  position: fixed;
  bottom: 32rpx;
}

/* 弹框状态 免费 */

.modal-container {
  display: flex;
  flex-direction: column;
}

.modal-top {
  display: flex;
  width: 100%;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

.modal-container {
  padding: 30rpx;
  box-sizing: border-box;
}

.modal-top-info {
  display: flex;
  align-items: center;
}

.modal-info {
  display: flex;
  flex-direction: column;
}

.modal-info text:nth-child(1) {
  font-size: 32rpx;
  color: #d7000f;
}

.modal-info text:nth-child(2) {
  font-size: 28rpx;
  color: #333;
  margin-top: 16rpx;
}

.modal-top .modal-quanImg {
  height: 120rpx;
  width: 120rpx;
  margin-right: 32rpx;
}

.modal-reason text,.modal-konw text:nth-child(1) {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}
.modal-konw-list{
  font-size: 24rpx;
  color:#4D4D4D;
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
}
.modal-konw-list .model-list-two{
  color: red;
}
.modal-xieyi{
  color:#297ACC
}
.placeholder-class {
  font-size: 24rpx;
  color: #b8b8b8;
}

.modal-reason input {
  margin-top: 16rpx;
  width: 686rpx;
  height: 120rpx;
  border: 1px solid #707070;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}


