/* pages/publishNotice/publishNotice.wxss */

page {
  background: #fff;
}

.publish-container {
  padding: 32rpx;
}

.publish-container textarea {
  width: 686rpx;
  margin: 27rpx auto;
  height: 500rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 42rpx;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}


.publish-img-container image {
  width: 220rpx;
  height: 220rpx;
}

.publish-container button {
  position: fixed;
  bottom: 32rpx;
  width: 686rpx;
  height: 88rpx;
  /* background: rgba(232, 232, 232, 1); */
  background:linear-gradient(90deg,rgba(255,170,128,1) 0%,rgba(255,76,76,1) 100%);
  opacity: 1;
  border-radius: 44px;
  color: #fff;
  font-size: 28rpx;
  line-height: 88rpx;
}

.publish-container button::after {
  border: none;
}

/* 发布照片样式 */
.img-list {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.img-item {
  width: 220rpx;
  margin: 0rpx 13rpx 13rpx 0;
  position: relative;
}
.img-item:nth-child(3n){
  margin-right: 0;
}
/* 删除按钮 */
.img-item .publish-detial{
  position: absolute;
  width: 48rpx;
  height:48rpx;
  top:8rpx;
  right:8rpx;
}
.img-item image {
  width: 220rpx;
  height: 220rpx;
  display:block;
}
