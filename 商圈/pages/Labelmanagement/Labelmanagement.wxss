/* pages/Labelmanagement/Labelmanagement.wxss */

.setting-label {
  color: #333;
  font-size: 24rpx;
  padding-top: 32rpx;
}

.setting-label .setting-title {
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.setting-shenfen {
  margin-top: 32rpx;
  color: #4d4d4d;
  font-size: 28rpx;
  background: #fff;
  padding: 32rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.setting-shenfen image {
  height: 28rpx;
  width: 28rpx;
  margin-right: 6rpx;
}

.addlabel {
  padding: 32rpx;
  color: #d7000f;
  font-size: 28rpx;
}

.setting-container button {
  margin-top: 200rpx;
  width: 686rpx;
  height: 88rpx;
  background: rgba(232, 232, 232, 1);
  opacity: 1;
  border-radius: 44px;
  color: #fff;
}

button::after {
  border: none;
}
/* 模态框样式 */
.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
left:0;top:0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.modal_box {
  width: 76%;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 12% 0 12%;
  border-radius: 3px;
}
 
.title {
  padding: 15px;
