@import '../ShoppingCart/ShoppingCart.wxss';

page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
}

.nav {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
}

.nav-item.active {
  color: red;
}

.tab-box {
  padding-top: 80rpx;
  height: 700px;
  box-sizing: border-box;
}

.tab-content {
  overflow-y: scroll;
}

.shoppling-top {
  justify-content: space-between;
  border-bottom: 0;
  padding: 0;
}

.shoppling-top-left {
  display: flex;
  align-items: center;
}

.goodStatusList-container {
  padding: 32rpx;
  box-sizing: border-box;
  border-top: 16rpx solid #f1f2f6;
}

.shoppling-top-code {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(153, 153, 153, 1);
  opacity: 1;
}

.shoppling-count-right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.orderItemList-bigbox-productName {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(77, 77, 77, 1);
  opacity: 1;
  width: 350rpx;
}

.shoppling-count-right view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(77, 77, 77, 1);
  opacity: 1;
}

.shoppling-count-right view:nth-child(2) {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 27rpx;
  color: rgba(153, 153, 153, 1);
  opacity: 1;
}

.orderItemList-bigbox {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.orderItemList-img {
  display: flex;
  align-items: center;
}

.orderItemList-img image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 16rpx;
}

.shoppling-bottom-btn {
  display: flex;
  justify-content: flex-end;
}

.shoppling-bottom-btn text:nth-child(1), .shoppling-bottom-btn text:nth-child(2) {
  width: 180rpx;
  height: 60rpx;
  text-align: center;
  background: rgba(255, 255, 255, 1);
  opacity: 1;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 60rpx;
}

.shoppling-bottom-btn text:nth-child(1) {
  border: 1px solid rgba(112, 112, 112, 1);
  color: rgba(77, 77, 77, 1);
  margin-right: 32rpx;
}

.shoppling-bottom-btn text:nth-child(2) {
  border: 1px solid rgba(215, 0, 15, 1);
  color: rgba(215, 0, 15, 1);
}
