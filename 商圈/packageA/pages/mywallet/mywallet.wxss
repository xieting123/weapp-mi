/* packageA/pages/mywallet/mywallet.wxss */

page {
  background: #f1f2f6;
}

.wallet-container {
  background: #fff;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.wallet-money {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #4d4d4d;
  font-size: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #e6e6e6;
}

.wallet-money-num view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(77, 77, 77, 1);
  opacity: 1;
}

.wallet-money .wallet-money-num view:nth-child(2) {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 105rpx;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}

.wallet-btn {
  width: 100rpx;
  height: 40rpx;
  text-align: center;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(51, 51, 51, 1);
  opacity: 1;
  border-radius: 10px;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(51, 51, 51, 1);
}

.wallet-container-bottom {
  background: #fff;
  margin-top: 16rpx;
  padding: 32rpx;
}

.wallet-container-bottom-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(77, 77, 77, 1);
  opacity: 1;
  border-bottom: 1px solid #eee;
}

.wallet-container-bottom-item image {
  width: 12rpx;
  height: 22rpx;
  opacity: 1;
}
