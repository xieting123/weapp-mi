/* packageA/pages/shopManagement/shopManagement.wxss */

page {
  background: #fff;
}

.shopmanagement-tongzhi {
  width: 100%;
  height: 42rpx;
  font-size: 18rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 42rpx;
  color: rgba(77, 77, 77, 1);
  opacity: 1;
  background: #f1f2f6;
}

.shopmanagement-container-centerbox {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  box-sizing: border-box;
}

.shopmanagement-container-centerbox-left,
.shopmanagement-container-centerbox-right {
  width: 327rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.1);
  opacity: 1;
  border-radius: 10px;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 16rpx;
  box-sizing: border-box;
}

.shopmanagement-container-centerbox-left text:nth-child(1),
.shopmanagement-container-centerbox-right text:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(77, 77, 77, 1);
  opacity: 1;
}

.shopmanagement-container-centerbox-left text:nth-child(2),
.shopmanagement-container-centerbox-right text:nth-child(2) {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 105rpx;
  color: rgba(215, 0, 15, 1);
  opacity: 1;
}

.shopmanagement-container-centerbox-left text:nth-child(3),
.shopmanagement-container-centerbox-right text:nth-child(3) {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(153, 153, 153, 1);
  opacity: 1;
}

.shopmanagement-container-bottom {
  display: flex;
  align-items: flex-start;
  flex-wrap:wrap;
}

.shopmanagement-container-bottom-menu {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin: 50rpx;
}
.shopmanagement-container-bottom-menu text{
font-size:22rpx;
font-family:Segoe UI;
font-weight:400;
line-height:38rpx;
display: inline-block;
height:38rpx;
color:rgba(153,153,153,1);
opacity:1;
}
.shopmanagement-container-bottom-menu image {
  width: 80rpx;
  height: 80rpx;
}
.shopmanagement-container-centertwobox{
font-size:28rpx;
font-family:PingFang SC;
font-weight:400;
line-height:36px;
color:rgba(77,77,77,1);
opacity:1;
display: flex;
align-items: center;
justify-content: center;
}
.shopmanagement-container-centertwobox view{
  width:300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.shopmanagement-container-centertwobox text{
  margin-left: 8rpx;
background:rgba(215,0,15,1);
border-radius:10px;
font-size:24rpx;
height: 28rpx;
line-height: 28rpx;
font-family:PingFang SC;
font-weight:400;
display: inline-block;
padding:6rpx;
color:rgba(255,255,255,1);
opacity:1;
}
