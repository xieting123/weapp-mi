/* packageA/pages/ShoppingCartPay/ShoppingCartPay.wxss */
@import '../ShoppingCart/ShoppingCart.wxss';

page {
  background: #fff;
}

.address-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  box-sizing: border-box;
}

.address-info-left {
  display: flex;
  align-items: center;
}

.address-info-left image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.address-info-left text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}

.toaddaddress-icon {
  width: 12rpx;
  height: 22rpx;
}

.address-info-bottom image {
  width: 100%;
  height: 2rpx;
}

.shoppling-list-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shoppling-bottom {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 36rpx;
  color: rgba(77, 77, 77, 1);
  opacity: 1;
}


.shoppling-bottom {
  padding: 32rpx;
}

.shoppling-bottom text:nth-child(2) {
  font-size: 31rpx !important;
}

.payshopping-menu {
  width: 750rpx;
  height: 98rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -1px 4px rgba(0, 0, 0, 0.16);
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: fixed;
  bottom: 0;
}

.payshopping-menu text:nth-child(1) {
  font-size: 28rpx;
  color: #333;
  font-family: PingFang SC;
  font-weight: bold;
}

.payshopping-menu text:nth-child(2) {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(215, 0, 15, 1);
  opacity: 1;
}

.checkout-btn {
  width: 250rpx;
  height: 98rpx;
  display: inline-block;
  background: rgba(215, 0, 15, 1);
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 98rpx;
  text-align: center;
  color: rgba(255, 255, 255, 1);
  margin-left: 32rpx;
}
.address-info-left-top text:nth-child(1),.address-info-left-top text:nth-child(2){
font-size:28rpx;
font-family:PingFang SC;
font-weight:400;
line-height:36rpx;
}
.address-info-left-top text:nth-child(1){
color:#333333;
margin-right: 10rpx;
}
.address-info-left-top text:nth-child(2){
color:rgba(153,153,153,1);
}
.address-info-left-bottom{
font-size:28rpx;
font-family:PingFang SC;
font-weight:400;
line-height:60rpx;
color:rgba(51,51,51,1);
opacity:1;
}
.shoplist-containerBox{
  margin-bottom:120rpx;
}