/* packageA/pages/ShoppingCart/ShoppingCart.wxss */
@import '../../../pages/PublishingDynamics/PublishingDynamics.wxss';

.shoplist-container {
  margin-bottom: 120rpx;
}

.shoppling-item {
  background: #fff;
  border-top: 16rpx solid #f1f2f6;
}

.shoppling-top {
  display: flex;
  align-items: center;
  padding: 32rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e6e6e6;
}

.shopIcon {
  width: 38rpx;
  height: 38rpx;
}

.toshoplistIcon {
  width: 12rpx;
  height: 22rpx;
}

.shoppling-top text {
  font-size: 28rpx;
  padding: 0 10rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 36rpx;
  color: rgba(77, 77, 77, 1);
  opacity: 1;
}

.shoppling-list image {
  width: 100%;
  height: 100%;
}

.off-self-box {
  margin: 0 32rpx;
  width: 150rpx;
  height: 150rpx;
}

.off-self-img {
  position: absolute;
  left: 0;
  top: 0;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  background-image: url('https://img.ishangmi.cn/group1/mini/off_shelf.png');
}

.shoppling-list-name {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(77, 77, 77, 1);
  opacity: 1;
  overflow: hidden;
  display: inline-block;
  width: 450rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
}

.shoppling-list-price {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 47rpx;
  color: rgba(153, 153, 153, 1);
  opacity: 1;
}

.shoppling-list {
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  position: relative;
}

.count-text {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
}

.count-text text {
  text-align: center;
  display: inline-block;
  line-height: 40rpx;
}

.count-text text:nth-child(1) {
  color: #e6e6e6;
  font-size: 28rpx;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #e6e6e6;
}

.count-text text:nth-child(2) {
  color: #666;
  font-size: 24rpx;
  width: 80rpx;
  height: 40rpx;
  border-top: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
}

.count-text text:nth-child(3) {
  color: #999;
  font-size: 28rpx;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #e6e6e6;
}

/* 底部菜单 */

.bottom-menus {
  width: 750rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -1px 4px rgba(0, 0, 0, 0.16);
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  padding-left: 32rpx;
  box-sizing: border-box;
}

.radio-group {
  display: flex;
  align-items: center;
}

.radio {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 98rpx;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
}

.countmoney {
  height: 98rpx;
}

.countmoney text:nth-child(1) {
  font-size: 28rpx;
  color: #333;
}

.countmoney text:nth-child(2) {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 98rpx;
  color: rgba(215, 0, 15, 1);
  opacity: 1;
}

.saveBtn, .saveBtn2 {
  width: 250rpx;
  height: 98rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 98rpx;
  color: rgba(255, 255, 255, 1);
  opacity: 1;
  text-align: center;
}

.saveBtn {
  background: rgba(215, 0, 15, 1);
}

.saveBtn2 {
  background: orange;
}
